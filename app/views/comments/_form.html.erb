<%= form_for([@commentable, @commentable.comments.build]) do |f| %>
	<%= f.hidden_field :commentable, :value => @commentable.class%>	
	<%= f.hidden_field :id, :value => @commentable.id%>
	<%= f.label :name %><br>
	<%= f.text_field :name %><br>
	<br>
	<%= f.label :body %><br>
	<%= f.text_area :body %><br>
	<br>
	<%= f.submit %>
<% end %>