<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<div id="errors">
			<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= f.label :徵才計畫名稱 %><br>
	<%= f.text_field :title %><br>
	<br>
	<%= f.label :計畫簡述 %><br>
	<%= f.text_area :body %><br>
	<br>
	<%= f.submit :確認新增 %>
<% end %>