<div id="main-core">
<% if is_authorized_user %>

	<%= form_tag 'users', :controller=>'users', :method => :get do %>
	  <p>
	  	<%= select_tag "sport" , "
	  	<option value = '0'>所有</option>
	  	<option value = '1'>男籃</option>
	  	<option value = '2'>女籃</option>
	  	<option value = '3'>男排</option>
	  	<option value = '4'>女排</option>
	  	<option value = '5'>壘球</option>
	  	<option value = '6'>羽排</option>
	  	<option value = '7'>桌球</option>"
	  	.html_safe%>
	  	
	  	<%= select_tag :money_transfered , "
	  	<option value = 'all'>所有</option>
	  	<option value = 'true'>已填代碼</option>
	  	<option value = 'false'>未填代碼</option>"
	  	.html_safe%>
		
		<%= select_tag :is_register_confirmed , "
	  	<option value = 'all'>所有</option>
	  	<option value = 'true'>已確認</option>
	  	<option value = 'false'>未確認</option>"
	  	.html_safe%>
		
		
	    <%= text_field_tag :fbname, params[:name] %>
	    <%= submit_tag "Search", :name => nil %>
	  </p>
	<% end %>
	


	<%=
=begin
	 form_for @users do |f| %>

		 <%= f.check_box :transfercode  %>轉帳完成
		 <%= f.submit "Submit", :disable_with => 'Submiting...' %>
	<% end 
=end
	%>


	<% if @users.count==0 %>
	<p class="">no related found</p>
	<% end %>
	
	<% @users.each do |user| %>
		
			<div class="post_wrapper">
				<%= link_to user.school+" "+user.name , user_path(user) %>
			</div>
		
	<% end %>

<% else %>
		<p> 你沒有權限造訪</p>
<% end %>

</div>